# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
# Set to true to use PostgreSQL, false to use JSON files
USE_DATABASE=false

# PostgreSQL Database Settings (only needed if USE_DATABASE=true)
# Option 1: Use DATABASE_URL (recommended for production/Render)
# DATABASE_URL=postgresql://username:password@localhost:5432/dicebot

# Option 2: Use individual settings (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dicebot
DB_USER=your_username
DB_PASSWORD=your_password

# Other Configuration
# Add any other environment variables your bot needs